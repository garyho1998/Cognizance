                    android:fontFamily="@font/days_one"
                    android:text="Day 1"
                    android:layout_marginLeft="30dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="#FFFFFF"
                    android:textSize="13dp" />
